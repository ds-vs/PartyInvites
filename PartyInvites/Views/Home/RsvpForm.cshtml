@model GuestResponse;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Форма</title>
    <link rel="stylesheet" href="/css/style.css"/>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css"/>
</head>
<body>
    <!-- Форма для гостя -->
    <h5 class="bg-primary text-white text-center m-2 p-2">Заполни форму!</h5>
    <form asp-action="RsvpForm" method="post" class="m-2 p-2">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name">Твоё имя:</label>
            <input asp-for="Name" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Email">Твоя почта:</label>
            <input asp-for="Email" class="form-control"/>
        </div class="form-group">
        <div class="form-group">
            <label asp-for="Phone">Твой телефон:</label>
            <input asp-for="Phone" class="form-control"/>
        </div class="form-group">
        <div class="form-group">
            <label>Ты будешь присутствовать?</label>
            <select asp-for="WillAttend" class="form-control">
                <option value="">Выбери вариант</option>
                <option value="true">Да, я буду</option>
                <option value="false">Нет, я не могу прийти</option>
            </select>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Отправить</button>
    </form>
</body>
</html>

