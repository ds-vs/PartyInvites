@model GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Спасибо!</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
</head>
<body class="text-center">
    <div>
        <h1>Спасибо, @Model.Name!</h1>
    
        @if (Model.WillAttend == true)
        {
            @:Это здорово, что ты придёшь. Напитки уже в холодильнике :)
        }
        else
        {
            @:Жаль слышать, что ты не сможешь, но спасибо, что дал знать.
        }
    </div>
    Нажми <a asp-action="ListResponses">сюда</a> чтобы посмотреть кто придёт.
</body>
</html>

